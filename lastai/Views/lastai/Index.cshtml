@model IEnumerable<lastai.Models.lastaiTable>

@{
    ViewBag.Title = "Index";
}
<head>
    <link rel="stylesheet" href="~/Content/all.css" />
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700italic,700,500italic,500,300,300italic,400italic' rel='stylesheet' type='text/css'>
</head>

<h2>Influential Programmers of All Time.</h2>
<div container>
    <p class="addaprogrammer">@Html.ActionLink("Add a programmer", "Create")</p>
    @using (Html.BeginForm())
    {
        <p>

            @Html.TextBox("SearchString")
            <input type="submit" value="Search" />

        </p>
    }
</div>
<table class="table">
    <tr>
        <th>

        </th>
        <th width="200" style="text-align:center">
            
                @Html.DisplayNameFor(model => model.Name)
            
        </th>


        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Quote)
        </th>
        <th style="text-align:center">
            Description
      
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style='text-align:center;vertical-align:middle'>
                <img src="@Url.Content(item.Picture)" height="180" width="140" />
            </td>
            <td style='text-align:center;vertical-align:middle'>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td style='vertical-align:middle'>
                @Html.DisplayFor(modelItem => item.Quote)
            </td>
            <td>
                <span class="first">
                    Date of Birth:  
                </span>
                <span class="second">
                    @Html.DisplayFor(modelItem => item.Born)</span>
                <br />
                <span class="first">
                    Profession:
                </span>
                <span class="second">
                    @Html.DisplayFor(modelItem => item.Profession)
                </span>
                <br />
                <p>
                    @Html.DisplayFor(modelItem => item.Short_Description)

                </p>@Html.ActionLink("read more", "Details", new { id = item.id })
</td>
            <td style='text-align:center;vertical-align:middle'>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.id})
                
            </td>


        </tr>
    }
</table>

